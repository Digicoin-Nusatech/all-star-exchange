.alert-component {
    position: fixed;
    top: 30%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 999999;
    .alert-wrapper {
        .alert-content {
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
        }

        .alert {
            padding: 14px 20px;
            border-radius: 8px;
            font-size: 14px;
            line-height: 15px;
            display: inline-block;
        }
    }

    /* &.alert-center {
        top: 30%;
        left: 50%;
        transform: translate(-50%, -50%);
    } */
}
