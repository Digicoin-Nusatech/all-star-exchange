.alert-component {
    position: absolute;
    right: 60px;
    top: 100px;
    z-index: 999999;
    .alert-wrapper {
        .alert-content {
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
        }

        .alert {
            padding: 14px 20px;
            border-radius: 8px;
            font-size: 14px;
            line-height: 15px;
            width: inline-block;
        }
    }
}
