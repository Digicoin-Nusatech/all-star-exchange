.custom-modal {
    z-index: 99999;
    background: var(--rgb-dropdown-show);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 1 !important;
    justify-content: center;
    display: flex;
    align-items: Center;
    .custom-modal-dialog {
        max-width: 440px !important;
        height: 100%;
        display: flex;
        align-items: center;
        margin-top: 0;
    }

    &.wide-modal {
        .modal-dialog {
            max-width: 800px !important;
            height: 100%;
            display: flex;
            align-items: center;
            margin-top: 0;
        }
    }

    .custom-modal-content {
        background-color: var(--rgb-white-color);
        padding: 20px;

        border-radius: 10px;
    }
}
